                </tr>
                <tr>
                    <td><b>Totalt:</b></td>
                    <td><input type="text" class="sumHours input_readOnly" readonly /></td>
                    <td><input type="text" class="sumCost input_readOnly" readonly /></td>
                </tr>
                <tr>
                    <td><label asp-for="UpdateAmountOfWorkVM.TravelCost" class="label_text"></label></td>
                    <td><input asp-for="UpdateAmountOfWorkVM.TravelCost" class="input_work" /></td>
                </tr>
                <tr>
                    <td><label asp-for="UpdateAmountOfWorkVM.WorkDiscount" class="label_text"></label></td>
                    <td><input asp-for="UpdateAmountOfWorkVM.WorkDiscount" class="input_work" /></td>
