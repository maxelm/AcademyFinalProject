@model ListInquiryVM[]

<link rel="stylesheet" href="~/bootstrap/css/bootstrap.css" />
<div class="container">
    <h1>Nya förfrågningar</h1>
    <table class="table table-striped table-bordered table-hover sortable" id="myTable2">
        <thead>
            <tr>
                <th>Namn</th>
                <th>Fastighet</th>
                <th>KVM</th>
                <th>Öns. byggstart</th>
                <th>Inskickat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @if (item.IsComplete == false)
                    {
                        <td>
                            <a asp-controller="Company" asp-action="CreateOffer" asp-route-id="@item.CID">
                                @item.FirstName @item.LastName
                            </a>
                        </td>
                            <td>@item.ProjectType</td>
                                <td>@item.SquareMeter</td>
                                <td>@item.RequestedStartDate</td>
                                <td data-dateformat="MM-DD-YYYY" data-value="@item.OrderReceived">@item.OrderReceived</td> 
                    }
                 </tr>
            }
        </tbody>
    </table>
    <br /><br /><br /><br /><br />
    <h1>Färdiga offerter</h1>
    <table class="table table-striped table-bordered table table-hover sortable">
        <thead>
            <tr>
                <th>Namn</th>
                <th>Fastighet</th>
                <th>KVM</th>
                <th>Öns. byggstart</th>
                <th>Inskickat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @if (item.IsComplete == true)
                    {
                        <td>
                            <a asp-controller="Company" asp-action="FinalOffer" asp-route-id="@item.CID">
                                @item.FirstName @item.LastName
                            </a>
                        </td>
                            <td>@item.ProjectType</td>
                            <td>@item.SquareMeter</td>
                            <td>@item.RequestedStartDate</td>
                            <td data-dateformat="MM-DD-YYYY" data-value="@item.OrderReceived">@item.OrderReceived</td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/js/moment.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
<script src="~/js/bootstrap-sortable.js"></script>
<script src="~/js/Script.js"></script>
