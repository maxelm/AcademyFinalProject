            </div>
        </fieldset>

        &emsp;&emsp;
        <!-- Arbetskostnader -->
        <fieldset>
            <legend>Arbetskostnader</legend>
            <table class="CreateOffer_table">
                <tr>
                    <td></td>
                    <td>Antal tim</td>
                    <td>Tim deb.</td>
                </tr>
                <tr>
                    <td><label asp-for="UpdateAmountOfWorkVM.DemolitionHours" class="label_text"></label></td>
                    <td><input asp-for="UpdateAmountOfWorkVM.DemolitionHours" class="numHours1 key input_work" /></td>
                    <td><input asp-for="UpdateAmountOfWorkVM.HourlyRateDemolition" class="numDeb1 key input_work" step="any" /></td>
                </tr>
                <tr>
                    <td><label asp-for="UpdateAmountOfWorkVM.DrainHours" class="label_text"></label></td>
                    <td><input asp-for="UpdateAmountOfWorkVM.DrainHours" class="numHours2 key input_work" /></td>
