                </tr>
                <tr>
                    <td></td>
                    <td><span asp-validation-for="CustomerInfo.FirstName" class="span_validation"></span></td>
                </tr>

                <tr>
                    <td><label asp-for="CustomerInfo.LastName" class="label_text"></label></td>
                    <td><input asp-for="CustomerInfo.LastName" class="input_field" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td></td>
                    <td><span asp-validation-for="CustomerInfo.LastName" class="span_validation"></span></td>
                </tr>

                <tr>
                    <td><label asp-for="CustomerInfo.Street" class="label_text"></label></td>
                    <td><input asp-for="CustomerInfo.Street" class="input_field" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td></td>
                    <td><span asp-validation-for="CustomerInfo.Street" class="span_validation"></span></td>
                </tr>

                <tr>
                    <td><label asp-for="CustomerInfo.Zip" class="label_text"></label></td>
