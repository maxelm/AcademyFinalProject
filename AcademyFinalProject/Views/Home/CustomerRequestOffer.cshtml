                </tr>

                <tr>
                    <td><label asp-for="ProductSelection.SelectedClinker" class="label_text"></label></td>
                    <td><select asp-for="ProductSelection.SelectedClinker" asp-items="Model.ProductSelection.ClinkerItems" class="input_field"></select></td>
                    <td><span asp-validation-for="ProductSelection.SelectedClinker" class="span_validation"></span></td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td><label asp-for="ProductSelection.Sum" class="label_text"></label></td>
