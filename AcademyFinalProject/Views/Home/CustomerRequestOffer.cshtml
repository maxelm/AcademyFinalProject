                    <td></td>
                </tr>
                <tr>
                    <td><label asp-for="ProjectInfoSelection.SelectedPropertyType" class="label_text"></label></td>
                    <td><select asp-for="ProjectInfoSelection.SelectedPropertyType" asp-items="Model.ProjectInfoSelection.PropertyTypeItems" class="input_field"></select></td>
