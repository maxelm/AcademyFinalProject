                    <td><input asp-for="UpdateAmountOfWorkVM.MountingHours" class="numHours3 key input_work" /></td>
                    <td><input asp-for="UpdateAmountOfWorkVM.HourlyRateMounting" class="numDeb3 key input_work" /></td>
