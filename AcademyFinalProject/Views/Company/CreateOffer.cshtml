@model CreateOfferWrapperVM

<link rel="stylesheet" href="~/bootstrap/css/bootstrap.css" />

<div class="container">
    <form asp-controller="Company" asp-action="CreateOffer" asp-route-id="@Model.ShowCustomerInfoVM.CID">
        <fieldset>
            <legend>Kundinformation</legend>
            <table class="CreateOffer_table">
                <tr>
                    <td><label asp-for="ShowCustomerInfoVM.FirstName" class="label_text"></label></td>
                    <td>@Model.ShowCustomerInfoVM.FirstName</td>
                </tr>
                <tr>
                    <td><label asp-for="ShowCustomerInfoVM.LastName" class="label_text"></label></td>
                    <td>@Model.ShowCustomerInfoVM.LastName</td>
                </tr>
                <tr>
                    <td><label asp-for="ShowCustomerInfoVM.Phone" class="label_text"></label></td>
                    <td>@Model.ShowCustomerInfoVM.Phone</td>
                </tr>
                <tr>
                    <td><label asp-for="ShowCustomerInfoVM.Street" class="label_text"></label></td>
                    <td>@Model.ShowCustomerInfoVM.Street</td>
                </tr>
                <tr>
                    <td><label asp-for="ShowCustomerInfoVM.Phone" class="label_text"></label></td>
                    <td>
                        @Model.ShowCustomerInfoVM.City
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="ShowCustomerInfoVM.Zip" class="label_text"></label></td>
                    <td>@Model.ShowCustomerInfoVM.Zip</td>
                </tr>
                <tr>
                    <td><label asp-for="ShowCustomerInfoVM.Email" class="label_text"></label></td>
                    <td>@Model.ShowCustomerInfoVM.Email</td>
                </tr>
                <tr>
                    <td><label asp-for="ShowCustomerInfoVM.TextBox" class="label_text"></label></td>
                    @if (@Model.ShowCustomerInfoVM.TextBox != null)
                    {
                        <td>@Model.ShowCustomerInfoVM.TextBox</td>
                    }
                    else
                    {
                        <td>--</td>
                    }
                </tr>
                <tr style="border-bottom: 1.6px solid #e5e5e5;">
                    <td><br /><span style="font-size: 21px; color: #333; font-weight:bold;">Uppdragsinfo:</span></td>
                    <td></td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td><label asp-for="ShowOrderInfoVM.ProjectType" class="label_text"></label></td>
                    <td>@Model.ShowOrderInfoVM.ProjectType</td>
                </tr>
                <tr>
                    <td><label asp-for="ShowOrderInfoVM.SquareMeter" class="label_text"></label></td>
                    <td>@Model.ShowOrderInfoVM.SquareMeter</td>
                </tr>
                <tr>
                    <td><label asp-for="ShowOrderInfoVM.PropertyType" class="label_text"></label></td>
                    <td>@Model.ShowOrderInfoVM.PropertyType</td>
                </tr>
                <tr>
                    <td><label asp-for="ShowOrderInfoVM.OrderReceived" class="label_text"></label></td>
                    <td>@Model.ShowOrderInfoVM.OrderReceived</td>
                </tr>
                <tr>
                    <td><label asp-for="ShowOrderInfoVM.RequestedStartDate" class="label_text"></label></td>
                    <td>@Model.ShowOrderInfoVM.RequestedStartDate</td>
                </tr>
                <tr>
                    <td><label asp-for="ShowOrderInfoVM.ViableROTCandidates" class="label_text"></label></td>
                    <td>@Model.ShowOrderInfoVM.ViableROTCandidates</td>
                </tr>
            </table>
        </fieldset>
        &emsp;
        <fieldset>
            <legend>Material</legend>
            <table class="CreateOffer_table">
                <tr>
                    <td><label asp-for="SelectedProductsVM.Cabinet" class="label_text"></label></td>
                    @if (@Model.SelectedProductsVM.Cabinet != null)
                    {
                        <td>@Model.SelectedProductsVM.Cabinet</td>
                    }
                    else
                    {
                        <td>Ej vald</td>
                    }
                </tr>
                <tr>
                    <td><label asp-for="SelectedProductsVM.Clinker" class="label_text"></label></td>
                    @if (@Model.SelectedProductsVM.Clinker != null)
                    {
                        <td>@Model.SelectedProductsVM.Clinker</td>
                    }
                    else
                    {
                        <td>Ej vald</td>
                    }
                </tr>
                <tr>
                    <td><label asp-for="SelectedProductsVM.Faucet" class="label_text"></label></td>
                    @if (@Model.SelectedProductsVM.Faucet != null)
                    {
                        <td>@Model.SelectedProductsVM.Faucet</td>
                    }
                    else
                    {
                        <td>Ej vald</td>
                    }
                </tr>
                <tr>
                    <td><label asp-for="SelectedProductsVM.Lightning" class="label_text"></label></td>
                    @if (@Model.SelectedProductsVM.Lightning != null)
                    {
                        <td>@Model.SelectedProductsVM.Lightning</td>
                    }
                    else
                    {
                        <td>Ej vald</td>
                    }
                </tr>
                <tr>
                    <td style="font-weight:bold"><label asp-for="SelectedProductsVM.Shower"></label></td>
                    @if (@Model.SelectedProductsVM.Shower != null)
                    {
                        <td>@Model.SelectedProductsVM.Shower</td>
                    }
                    else
                    {
                        <td>Ej vald</td>
                    }
                </tr>
                <tr>
                    <td><label asp-for="SelectedProductsVM.Sink" class="label_text"></label></td>
                    @if (@Model.SelectedProductsVM.Sink != null)
                    {
                        <td>@Model.SelectedProductsVM.Sink</td>
                    }
                    else
                    {
                        <td>Ej vald</td>
                    }
                </tr>
                <tr>
                    <td><label asp-for="SelectedProductsVM.Tile" class="label_text"></label></td>
                    @if (@Model.SelectedProductsVM.Tile != null)
                    {
                        <td>@Model.SelectedProductsVM.Tile</td>
                    }
                    else
                    {
                        <td>Ej vald</td>
                    }
                </tr>
                <tr>
                    <td><label asp-for="SelectedProductsVM.Toilet" class="label_text"></label></td>
                    @if (@Model.SelectedProductsVM.Toilet != null)
                    {
                        <td>@Model.SelectedProductsVM.Toilet</td>
                    }
                    else
                    {
                        <td>Ej vald</td>
                    }
                </tr>
                <tr>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td><label asp-for="SelectedProductsVM.TotalProductCost" class="label_text"></label></td>
                    <td>@Model.SelectedProductsVM.TotalProductCost SEK</td>
                </tr>
            </table>
        </fieldset>
        &emsp;
        <fieldset>
            <legend>Arbetskostnader</legend>
            <table class="CreateOffer_table">
                    <tr>
                        <td></td>
                        <td>Antal tim</td>
                        <td>Tim deb.</td>
                    </tr>
                    <tr>
                        <td><label asp-for="AmountOfWorkVM.DemolitionHours" class="label_text"></label></td>
                        <td><input asp-for="AmountOfWorkVM.DemolitionHours" class="numHours1 key input_work" /></td>
                        <td><input asp-for="AmountOfWorkVM.HourlyRateDemolition" class="numDeb1 key input_work" step="any" /></td>
                    </tr>
                    <tr>
                        <td><label asp-for="AmountOfWorkVM.DrainHours" class="label_text"></label></td>
                        <td><input asp-for="AmountOfWorkVM.DrainHours" class="numHours2 key input_work" /></td>
                        <td><input asp-for="AmountOfWorkVM.HourlyRateDrain" class="numDeb2 key input_work" /></td>
                    </tr>
                    <tr>
                        <td><label asp-for="AmountOfWorkVM.MountingHours" class="label_text"></label></td>
                        <td><input asp-for="AmountOfWorkVM.MountingHours" class="numHours3 key input_work" /></td>
                        <td><input asp-for="AmountOfWorkVM.HourlyRateMounting" class="numDeb3 key input_work" /></td>
                    </tr>
                    <tr>
                        <td><label asp-for="AmountOfWorkVM.TileHours" class="label_text"></label></td>
                        <td><input asp-for="AmountOfWorkVM.TileHours" class="numHours4 key input_work" /></td>
                        <td><input asp-for="AmountOfWorkVM.HourlyRateTile" class="numDeb4 key input_work" /></td>
                    </tr>
                    <tr>
                        <td><label asp-for="AmountOfWorkVM.ElectricityHours" class="label_text"></label></td>
                        <td><input asp-for="AmountOfWorkVM.ElectricityHours" class="numHours5 key input_work" /></td>
                        <td><input asp-for="AmountOfWorkVM.HourlyRateElectricity" class="numDeb5 key input_work" /></td>
                    </tr>
                    <tr>
                        <td><label asp-for="AmountOfWorkVM.VentilationHours" class="label_text"></label></td>
                        <td><input asp-for="AmountOfWorkVM.VentilationHours" class="numHours6 key input_work" /></td>
                        <td><input asp-for="AmountOfWorkVM.HourlyRateVentilation" class="numDeb6 key input_work" /></td>
                    </tr>
                <tr>
                    <td><b>Totalt:</b></td>
                    <td><input type="text" class="sumHours input_readOnly" readonly /></td>
                    <td><span class="input-symbol-sek"><input type="text" class="sumCost input_readOnly" readonly /></span></td>
                </tr>
                <tr>
                    <td><label asp-for="AmountOfWorkVM.TravelCost" class="label_text"></label></td>
                    <td><input asp-for="AmountOfWorkVM.TravelCost" class="input_work" /></td>
                </tr>
                <tr>
                    <td><label asp-for="AmountOfWorkVM.WorkDiscount" class="label_text"></label></td>
                    <td><input asp-for="AmountOfWorkVM.WorkDiscount" class="input_work" /></td>
                </tr>

            </table>
        </fieldset>
        <div class="div_buttons"><p><button onclick="goBack()" style="vertical-align:middle; width:230px;" class="button_back"><span>Tillbaka</span></button> <button type="submit" style="vertical-align:middle; width:230px;" class="button"><span>Skapa offert!</span></button></p></div>
    </form>
</div>

@section Scripts
    {
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.0.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/Script.js"></script>
}